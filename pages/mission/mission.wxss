/* pages/mission/mission.wxss */
@import "../../utils/public.wxss";
.top-header-inner{
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  border-bottom: 6rpx solid white;
  text-align: center;
  background: white;
  font-size:26rpx;
}
.activeTab{
  border-color: #ffa41b;
  color: #ffa41b;
}
.deliver-btn{
  position: fixed;
  right: 32rpx;
  bottom: 128rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  font-size: 24rpx;
  text-align: center;
  background: #ffa41b;
  box-shadow: 0px 6rpx 4rpx rgba(255,164,27,0.5);
}
.deliver-btn-hover{
  transform: translateY(6rpx);
  box-shadow: 0px 0rpx 0rpx rgba(255,164,27,0.5);
}
.deliver-text{
  color: white;
}