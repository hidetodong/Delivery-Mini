/* pages/mission/mission.wxss */
@import "../../utils/public.wxss";
.top-header-inner{
  height: 100rpx;
  flex: 1;
  line-height: 100rpx;
  border-bottom: 6rpx solid white;
  text-align: center;
  background: white;
  font-size:26rpx;
}
.activeTab{
  border-color: #ffa41b;
  color: #ffa41b;
}
.deliver-btn{
  position: fixed;
  right: 32rpx;
  bottom: 128rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  font-size: 24rpx;
  text-align: center;
  background: #ffa41b;
  box-shadow: 0px 6rpx 4rpx rgba(255,164,27,0.5);
}
.deliver-btn-hover{
  transform: translateY(6rpx);
  box-shadow: 0px 0rpx 0rpx rgba(255,164,27,0.5);
}
.deliver-text{
  color: white;
}
.mission-status{
  padding: 24rpx 128rpx;
  background: white;
  font-size: 28rpx;
  font-weight: 600;
}
.list-inner{
  background: white;
  border-radius: 25rpx;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  position: relative;
  box-shadow: 0px 6rpx 4rpx rgba(255,164,27,0.5);

}
.list-body{
  display: flex;
  justify-content: space-between;
}
.body-left{
  width:50rpx;
  height:400rpx;
  text-align: center;
  border-radius: 25rpx;
  border: 2rpx solid #ffa41b;
  -webkit-writing-mode: vertical-rl; 
  letter-spacing: 16rpx;
  font-size: 36rpx;
  color: #ffa41b;
  font-weight: 600;
  
}
.body-right{
  flex:1;
  padding: 0 32rpx;
}
.text-area{
  width: 100%;
  height: 120rpx;
}
.order-info{
  font-size: 28rpx;
  border:2rpx solid #eee;
  height: 120rpx;
  /* margin: 0 auto; */
}
.body-title{
  font-size: 24rpx;
  color: #ccc;
  font-weight: 600;
}
.body-station{
  border-bottom:6rpx solid #ffa41b;
  padding-bottom: 24rpx;
}
.user-info{
  margin-top: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.price-info{
  margin: 24rpx 0;
}
.btn-block{
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;

}
.func-btn{
  border-radius: 25rpx;
  padding: 8rpx 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: white;
  background: #ffa41b;
  font-size: 24rpx;
  box-shadow: 0px 6rpx 4rpx rgba(255,164,27,0.5);
  margin-left: 16rpx;
}
.gray-btn{
  background: #999;
  box-shadow: 0px 6rpx 4rpx rgba(200,200,200,1);
}
.func-btn-hover{
  transform: translateY(6rpx);
  box-shadow: 0px 0rpx 0rpx rgba(255,164,27,0.5);

}
.corner-tag{
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 12rpx 48rpx;
  background: #eee;
  border-radius: 0 25rpx 0 25rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  /* box-shadow: 4rpx -2rpx 4rpx #aaa; */
}
.order-price{
  font-size: 50rpx;
  font-weight: 700;
  color: #ffa41b;
  text-shadow: 6rpx 4rpx 4rpx  rgba(255,164,27,0.5);
}
.deal-time{
  font-size: 28rpx;

}