/* pages/mission/toDeliver/toDeliver.wxss */
@import "../../../utils/public.wxss";
.top-block{
  background: rgba(255,164,27,1);
  height: 300rpx;
  width: 750rpx;
  font-size: 50rpx;
  line-height: 200rpx;
  padding: 0 128rpx;
  color: white;
}
.deliver-form{
  padding: 32rpx 96rpx;
  border-radius: 25rpx;
  background: white;
  box-shadow: 0 6rpx 4rpx #555;
  margin: 0 64rpx;
  /* height: 500rpx; */
  margin-top: -100rpx;
}
.deliver-btn{
  width: 300rpx;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  background:rgba(255,164,27,1);
  color: white;
  text-align: center;
  border-radius: 25rpx;
  box-shadow: 0 6rpx 4rpx rgba(255,164,27,0.5);
}
.deliver-btn-hover{
  box-shadow: 0 0 0 rgba(255,164,27,1);
  transform:translateY(6rpx) ;
}
.bottom-btn{
  position: fixed;
  bottom: 32rpx;
  width: 750rpx;

}
.get-info{
  height:102rpx;
  font-size: 26rpx;
  border: 4rpx solid #eee;
  width: 402rpx;
  margin: 24rpx 0;
  padding: 24rpx;
}
.deliver-title{
  font-size: 28rpx;
  font-weight: 600;
}
.form-inner{
  margin: 48rpx 0 ;
}